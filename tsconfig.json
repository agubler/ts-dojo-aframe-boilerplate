{
	"version": "1.5.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"moduleResolution": "classic"
	},
	"filesGlob": [
		"./typings/index.d.ts",
		"./site/**/*.ts",
		"./tests/**/*.ts"
	],
	"files": [
		"./tests/functional/all.ts",
		"./tests/intern-local.ts",
		"./tests/intern.ts",
		"./tests/unit/all.ts"
	]
}
